{
  "$schema": "../../schemas/plugin.schema.json",
  "name": "hook-notify-slack",
  "version": "1.0.0",
  "description": "Send Slack notifications when Claude Code completes tasks",
  "type": "hook",
  "author": {
    "name": "Claude Code Community",
    "github": "claude-code-community"
  },
  "repository": "https://github.com/claude-code-community/hooks",
  "license": "MIT",
  "tags": ["slack", "notifications", "alerts", "team"],
  "install": {
    "config": {
      "hooks": {
        "Stop": [
          {
            "hooks": [
              {
                "type": "command",
                "command": "curl -X POST -H 'Content-type: application/json' --data '{\"text\":\"Claude Code task completed!\"}' $SLACK_WEBHOOK_URL"
              }
            ]
          }
        ]
      }
    }
  },
  "requirements": {
    "os": ["darwin", "linux"]
  },
  "hook": {
    "event": "Stop"
  }
}
