{
  "$schema": "../../schemas/plugin.schema.json",
  "name": "hook-security-scan",
  "version": "1.0.0",
  "description": "Block potentially dangerous bash commands before execution",
  "type": "hook",
  "author": {
    "name": "Claude Code Community",
    "github": "claude-code-community"
  },
  "repository": "https://github.com/claude-code-community/hooks",
  "license": "MIT",
  "tags": ["security", "safety", "bash", "guard"],
  "install": {
    "config": {
      "hooks": {
        "PreToolUse": [
          {
            "matcher": "Bash",
            "hooks": [
              {
                "type": "command",
                "command": "node ~/.claude/hooks/security-check.js"
              }
            ]
          }
        ]
      }
    }
  },
  "hook": {
    "event": "PreToolUse",
    "matcher": "Bash"
  }
}
