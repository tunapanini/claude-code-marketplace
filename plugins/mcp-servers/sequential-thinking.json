{
  "$schema": "../../schemas/plugin.schema.json",
  "name": "mcp-sequential-thinking",
  "version": "1.0.0",
  "description": "Dynamic problem-solving through structured thought sequences with revision capabilities",
  "type": "mcp-server",
  "author": {
    "name": "Anthropic",
    "github": "anthropics"
  },
  "repository": "https://github.com/anthropics/claude-code",
  "license": "MIT",
  "tags": ["thinking", "reasoning", "problem-solving", "chain-of-thought", "official"],
  "install": {
    "npm": "@anthropic-ai/mcp-server-sequential-thinking",
    "config": {
      "mcpServers": {
        "sequential-thinking": {
          "command": "npx",
          "args": ["-y", "@anthropic-ai/mcp-server-sequential-thinking"]
        }
      }
    }
  },
  "requirements": {
    "node": ">=18.0.0"
  },
  "mcp": {
    "tools": ["sequentialthinking"]
  }
}
