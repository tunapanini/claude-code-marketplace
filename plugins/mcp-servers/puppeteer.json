{
  "$schema": "../../schemas/plugin.schema.json",
  "name": "mcp-puppeteer",
  "version": "1.0.0",
  "description": "Browser automation with Puppeteer - navigate, screenshot, and interact with web pages",
  "type": "mcp-server",
  "author": {
    "name": "Anthropic",
    "github": "anthropics"
  },
  "repository": "https://github.com/anthropics/claude-code",
  "license": "MIT",
  "tags": ["browser", "automation", "puppeteer", "screenshots", "official"],
  "install": {
    "npm": "@anthropic-ai/mcp-server-puppeteer",
    "config": {
      "mcpServers": {
        "puppeteer": {
          "command": "npx",
          "args": ["-y", "@anthropic-ai/mcp-server-puppeteer"]
        }
      }
    }
  },
  "requirements": {
    "node": ">=18.0.0"
  },
  "mcp": {
    "tools": [
      "navigate",
      "screenshot",
      "click",
      "fill",
      "select",
      "hover",
      "evaluate"
    ]
  }
}
