{
  "$schema": "../../schemas/plugin.schema.json",
  "name": "mcp-filesystem",
  "version": "1.0.0",
  "description": "Secure filesystem access for Claude Code with configurable directory permissions",
  "type": "mcp-server",
  "author": {
    "name": "Anthropic",
    "github": "anthropics"
  },
  "repository": "https://github.com/anthropics/claude-code",
  "license": "MIT",
  "tags": ["filesystem", "files", "directories", "official"],
  "install": {
    "npm": "@anthropic-ai/mcp-server-filesystem",
    "config": {
      "mcpServers": {
        "filesystem": {
          "command": "npx",
          "args": ["-y", "@anthropic-ai/mcp-server-filesystem", "${ALLOWED_DIRECTORIES}"]
        }
      }
    }
  },
  "requirements": {
    "node": ">=18.0.0"
  },
  "mcp": {
    "tools": [
      "read_file",
      "read_multiple_files",
      "write_file",
      "create_directory",
      "list_directory",
      "move_file",
      "search_files",
      "get_file_info"
    ]
  }
}
