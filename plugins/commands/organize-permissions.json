{
  "$schema": "../../schemas/plugin.schema.json",
  "name": "command-organize-permissions",
  "version": "1.0.0",
  "description": "Analyze and organize Claude Code permissions from local to global settings",
  "type": "command",
  "author": {
    "name": "tunapanini",
    "github": "tunapanini"
  },
  "repository": "https://github.com/tunapanini/dotfiles",
  "license": "MIT",
  "tags": ["permissions", "settings", "security", "organization", "configuration"],
  "install": {
    "command": "mkdir -p ~/.claude/commands/tupa && curl -o ~/.claude/commands/tupa/organize-permissions.md https://raw.githubusercontent.com/tunapanini/dotfiles/main/claude/.claude/commands/tupa/organize-permissions.md"
  },
  "command": {
    "name": "tupa:organize-permissions",
    "arguments": [
      {
        "name": "path-to-local-settings",
        "required": false,
        "description": "Path to local settings.local.json. Defaults to ./.claude/settings.local.json"
      }
    ]
  }
}
