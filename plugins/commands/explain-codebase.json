{
  "$schema": "../../schemas/plugin.schema.json",
  "name": "command-explain-codebase",
  "version": "1.0.0",
  "description": "Generate comprehensive codebase documentation and architecture overview",
  "type": "command",
  "author": {
    "name": "Claude Code Community",
    "github": "claude-code-community"
  },
  "repository": "https://github.com/claude-code-community/commands",
  "license": "MIT",
  "tags": ["documentation", "architecture", "onboarding", "understanding"],
  "install": {
    "command": "curl -o ~/.claude/commands/explain.md https://raw.githubusercontent.com/claude-code-community/commands/main/explain.md"
  },
  "command": {
    "name": "explain",
    "arguments": [
      {
        "name": "scope",
        "required": false,
        "description": "Scope: full, directory path, or file path"
      }
    ]
  }
}
