{
  "$schema": "../../schemas/plugin.schema.json",
  "name": "command-git-conventional",
  "version": "1.0.0",
  "description": "Generate conventional commit messages based on staged changes",
  "type": "command",
  "author": {
    "name": "Claude Code Community",
    "github": "claude-code-community"
  },
  "repository": "https://github.com/claude-code-community/commands",
  "license": "MIT",
  "tags": ["git", "commit", "conventional-commits", "changelog"],
  "install": {
    "command": "curl -o ~/.claude/commands/commit.md https://raw.githubusercontent.com/claude-code-community/commands/main/commit.md"
  },
  "command": {
    "name": "commit",
    "arguments": [
      {
        "name": "type",
        "required": false,
        "description": "Commit type: feat, fix, docs, style, refactor, test, chore"
      }
    ]
  }
}
